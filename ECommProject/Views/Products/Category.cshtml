@model IEnumerable<ECommProject.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="AddedProducts" asp-route-id="@item.id">Select Category</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
